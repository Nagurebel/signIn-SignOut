<%-include('header')-%>

    <div class="text-center center-div" id="login">
        <div class="container w-25 border py-3">
            <div class="title pb-3">
                <h2 class="font-weight-bold ">
                    Login System
                </h2>
                <span>Login for the existing user</span>
                <%if(locals.logout){%>
                    <div class="alert alert-success text-center" role="alert">
                        <%=logout%>
                    </div>
                    <%}%>
            </div>
            <form action="/route/login" method="post" class="pt-1">
                <div class="form-group">
                    <input type="email" class="form-control" placeholder="email" name="email">
                    <small class="form-text text-muted text-left">Register email adress</small>
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" placeholder="password" name="password">
                </div>
                <button class="btn btn-success rounded-pill" type="submit">Submit</button>
            </form>

        </div>
    </div>

    <%-include('footer')-%>